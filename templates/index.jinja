{% extends 'base.jinja' %}

{% block title %}SLURDLE{% endblock %}

{% block content %}
  <div class="text-center mb-8">
    <h1 class="text-3xl font-extrabold tracking-tight text-gray-900 mb-2">SLURDLE</h1>
    <p class="text-lg text-gray-600">
      Which ethnic group does <em class="font-bold text-gray-900 not-italic">"{{ data.slur }}"</em> target?
    </p>
    <p class="text-sm text-gray-400 mt-2">Hint: it's {{ data.correct_target }}</p>
  </div>

  <ul class="space-y-3">
    {% for target in data.targets %}
      <li
        class="target cursor-pointer p-4 border-2 border-gray-200 rounded-xl hover:border-blue-500 hover:bg-blue-50 transition-all text-center text-lg font-medium text-gray-700 select-none">
        {{ target }}
      </li>
    {% endfor %}
  </ul>

  <dialog id="result-dialog"
          class="p-8 rounded-2xl shadow-2xl border-0 backdrop:bg-gray-900/50 backdrop:backdrop-saturate-200 max-w-sm w-full m-auto text-center open:animate-fade-in">
    <p id="dialog-text" class="text-lg text-gray-800 font-medium mb-6 leading-relaxed"></p>
    <button id="next-btn"
            class="hidden w-full bg-green-100 border-green-500 text-green-800 font-bold py-3 px-4 rounded-xl mt-6 transition-colors shadow-sm">
      Next Question â†’
    </button>
  </dialog>

{% endblock %}

{% block scripts %}
  <script type="text/javascript" src="{{ url_for('static', filename='app.js') }}" defer></script>
{% endblock %}
